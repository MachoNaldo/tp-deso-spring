import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import java.util.List;

@RestController
@RequestMapping("/pedido")
public class PedidoController {

    private final PedidoService pedidoService;
    private final PagoController pagoController;

    @Autowired
    public PedidoController(PedidoService pedidoService, PagoController pagoController) {
        this.pedidoService = pedidoService;
        this.pagoController = pagoController;
    }

    @GetMapping("/listar")
    public List<Pedido> listarPedidos() {
        return pedidoService.listarPedidos();
    }

    @PostMapping("/crear")
    public String crearPedido(@RequestParam("clienteId") int clienteId) {
        pedidoService.crearNuevoPedido(clienteId);
        return "Pedido creado correctamente";
    }

    @PostMapping("/modificar")
    public String modificarPedido(@RequestParam("id") int id,
                                  @RequestParam("clienteId") int clienteId,
                                  @RequestParam("estado") String estado) {
        pedidoService.modificarPedido(id, clienteId, Estado.valueOf(estado));
        return "Pedido modificado correctamente";
    }

    @PostMapping("/eliminar")
    public String eliminarPedido(@RequestParam("id") int id) {
        boolean result = pedidoService.eliminarPedido(id);
        return result ? "Pedido eliminado correctamente" : "Error al eliminar el pedido";
    }

    @GetMapping("/buscar")
    public Pedido buscarPedido(@RequestParam("id") int id) {
        return pedidoService.buscarPedido(id);
    }
}
