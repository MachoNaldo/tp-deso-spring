package grupo1noche.tpspring.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.*;

import grupo1noche.tpspring.model.Pedido;
import grupo1noche.tpspring.service.PedidoService;

@Controller
@RequestMapping("/pedidos")
public class PedidoController {

    @Autowired
    private PedidoService pedidoService;

    @GetMapping("/crear")
    public String mostrarFormularioCrear(Model model) {
        model.addAttribute("pedido", new Pedido());
        return "pedido-crear";
    }

    @PostMapping("/crear")
    public String crearPedido(@ModelAttribute Pedido pedido) {
        pedidoService.crearPedido(pedido);
        return "redirect:/pedidos";
    }

    @GetMapping("/buscar")
    public String mostrarFormularioBuscar() {
        return "pedido-buscar";
    }

    @GetMapping("/{id}/editar")
    public String mostrarFormularioEditar(@PathVariable Long id, Model model) {
        Pedido pedido = pedidoService.buscarPedido(id);
        model.addAttribute("pedido", pedido);
        return "pedido-editar";
    }

    @PostMapping("/{id}/editar")
    public String editarPedido(@ModelAttribute Pedido pedido) {
        pedidoService.crearPedido(pedido); // Reutiliza para guardar cambios
        return "redirect:/pedidos";
    }
}
